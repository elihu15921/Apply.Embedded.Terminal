@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="2" Dense=true>
        <MudIconButton Class="pa-1 mr-0.5" Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />

        <MudText Align="Align.Right" Typo="Typo.h5" Class="ml-3">Green Box</MudText>
        <MudSpacer />

        <MudMenu Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End">
            <MudMenuItem>Settings</MudMenuItem>
            <MudMenuItem>Language</MudMenuItem>
        </MudMenu>
    </MudAppBar>

    <MudDrawer @bind-Open="@Open" ClipMode="ClipMode" Breakpoint="@Breakpoint" PreserveOpenState="@PreserveOpenState" Elevation="2" Variant="@DrawerVariant.Mini">
        <NavMenu />
    </MudDrawer>

    <MudMainContent Class="pt-16 px-16">
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-8 pt-8">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>